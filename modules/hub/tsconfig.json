{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "lib": ["es5", "es2015", "es6", "dom", "es2017"],
    "declarationDir": "dist/types",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "include": [
    "connext-migration-disbursement-tool.ts",
    "src/**/*.ts",
    "example/**/*.ts",
    "types/**/*.ts",
    "node_modules/**/index.d.ts"
  ],
  "exclude": [
    "node_modules/**",
    "../common/**",
    "src/frontend/**"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/@types"
  ]
}
