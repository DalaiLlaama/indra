{
  "name": "hub",
  "version": "1.0.1",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "test": "env DATABASE_URL_TEST='postgresql://localhost:5432/sc-hub-test' mocha -r ts-node/register/type-check -r ./src/register/common.ts -r ./src/register/testing.ts \"src/**/*.test.ts\" --exit",
    "drop-migrate-test": "./migrate-and-test.sh",
    "lint": "tslint -c ../common/tslint.json -t stylish src/**/*.ts",
    "build:backend": "tsc -p tsconfig.json",
    "build": "yarn clean && yarn build:backend",
    "runner": "node ./dist/spankchain/main.js",
    "start": "yarn build && concurrently -n hub,chainsaw 'node ./dist/spankchain/main.js' 'node ./dist/spankchain/main.js chainsaw'",
    "migrate": "db-migrate up --verbose all",
    "start-hub": "yarn clean && yarn build:backend && yarn runner",
    "start-chainsaw": "yarn clean && yarn build:backend && yarn runner chainsaw",
    "reset-and-migrate": "dropdb spank_hub && createdb spank_hub && yarn migrate",
    "blow-my-node": "yarn cache clean && rm -r node_modules/"
  },
